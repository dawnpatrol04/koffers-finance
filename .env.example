# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=
NEXT_PUBLIC_APPWRITE_DATABASE_ID=koffers_db

# Server-side Appwrite API Key (for setup scripts and API routes)
# Get from: Appwrite Console → Settings → API Keys
# Required scopes: databases.*, collections.*, attributes.*, indexes.*
APPWRITE_API_KEY=

# Plaid API Configuration
# Get from: https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID=
PLAID_SECRET=

# Plaid Environment: 'sandbox' | 'development' | 'production'
NEXT_PUBLIC_PLAID_ENVIRONMENT=sandbox

# Encryption Key for sensitive data (access tokens, etc.)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Application URLs
NEXT_PUBLIC_URL=http://localhost:3002

# Stripe Configuration
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Stripe Webhook Secret (get after creating webhook endpoint in dashboard)
# For local testing: stripe listen --forward-to localhost:3002/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=

# Stripe Product IDs (created via /tmp/create_stripe_products_v2.sh)
STRIPE_PRODUCT_BASE_PLAN=
STRIPE_PRODUCT_EXTRA_BANKS=
STRIPE_PRODUCT_EXTRA_STORAGE=
STRIPE_PRODUCT_EXTRA_AI_TOKENS=
STRIPE_PRODUCT_PRIORITY_SUPPORT=

# Stripe Price IDs (for checkout sessions)
STRIPE_PRICE_BASE_PLAN=
STRIPE_PRICE_EXTRA_BANKS=
STRIPE_PRICE_EXTRA_STORAGE=
STRIPE_PRICE_EXTRA_AI_TOKENS=
STRIPE_PRICE_PRIORITY_SUPPORT=
