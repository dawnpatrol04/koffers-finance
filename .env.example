# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=
NEXT_PUBLIC_APPWRITE_DATABASE_ID=koffers_db

# Server-side Appwrite API Key (for setup scripts and API routes)
# Get from: Appwrite Console → Settings → API Keys
# Required scopes: databases.*, collections.*, attributes.*, indexes.*
APPWRITE_API_KEY=

# Plaid API Configuration
# Get from: https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID=
PLAID_SECRET=

# Plaid Environment: 'sandbox' | 'development' | 'production'
NEXT_PUBLIC_PLAID_ENVIRONMENT=sandbox

# Encryption Key for sensitive data (access tokens, etc.)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Application URLs
NEXT_PUBLIC_URL=http://localhost:3002
